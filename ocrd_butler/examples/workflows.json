            "description": "Basic tesserocr workflow with Fraktur_GT4HistOCR model.",
            "processors": [
                {
                    "name": "ocrd-tesserocr-recognize",
                    "parameters": {
                        "model": "Fraktur_GT4HistOCR",
                        "segmentation_level": "region",
                        "textequiv_level": "line"
                    }
                },
                {
                    "name": "ocrd-fileformat-transform",
                    "parameters": {
                        "from-to": "page alto"
                    }
                }
            ]
        },
